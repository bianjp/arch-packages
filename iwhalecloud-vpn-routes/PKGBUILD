pkgname=bianjp-iwhalecloud-vpn-routes
pkgver=0.1.0
pkgrel=1
pkgdesc='Route only iwhalecloud intranet traffic to VPN'
groups=("bianjp")
arch=('any')
url='https://github.com/bianjp/arch-packages/tree/master/iwhalecloud-vpn-routes'
license=('MIT')
